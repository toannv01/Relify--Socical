<div class="container" id="re">
  <div class="ui form">
    <div class="form-top">
      <div class="form-top-left">
        <h3>Đăng nhập</h3>
          <p>Nhập tài khoản và mật khẩu để đăng nhập:</p>
      </div>
      <div class="form-top-right">
        <i class="lock icon"></i>
      </div>
    </div>
    <div class="form-bottom">

  

    <%= form_for(:session, url: login_path) do |f| %>
      <% flash.each do |name, msg| -%>
        <%= content_tag :div, msg, class: "alert alert-success #{name}" %>
      <% end -%>

      <div class="form-group" data-tooltip="Email là duy nhất và đúng định dạng" data-position="right center">
        <label class="sr-only" for="form-email">Email</label>
        <%= f.email_field :email, class: " invalid form-control", placeholder: "Email", :required =>'required' %>
        </div>
        <div class="form-group" data-tooltip="Mật khẩu dài từ 6 - 32 kí tự" data-position="right center">
          <label class="sr-only" for="form-password">Mật khẩu</label>
          <%= f.password_field :password, class: "form-control", placeholder: "Mật khẩu" , :required =>'required', :maxlength => 32 ,:minlength => 6 %>
        </div><div class="form-group" >
          <button type="submit"  class="btn btn-primary">Đăng nhập</button>
        </div>
      <div class="form-group form-check">
        <input type="checkbox" class="form-check-input" id="exampleCheck1">
        <label class="form-check-label" for="exampleCheck1">Nhớ mật khẩu</label>
      </div>
      <%= link_to 'Quên mật khẩu ?',  password_resets_path %><br>
      <%= link_to 'Đăng kí tài khoản mới ',  registration_path %><br>
    <% end %>
  </div>

</div>
</div>
